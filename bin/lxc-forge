#!/usr/bin/env ruby
require 'lxc_forge'

options = LxcForge::Options.parse(ARGV)
config = LxcForge::Config.new
config.load("config/application.yml")

begin
  LxcForge::Command.new(config, options).run
rescue Exception => e
  if options[:verbose]
    raise e
  else
    $stderr.puts e.message
    exit 1
  end
end
